<div class="row mt-3 justify-content-md-center">
    <div class="col-md-6">
        <h2 class="header">News Search</h2>
    </div>
</div>

<div class="row mt-3 justify-content-md-center">
    <div class="col-md-6">



        <form action="/search" method="get">



            <div class="form-group mt-3">
                <input type="text" class="form-control" name="searchQuery" placeholder="search for the latest News">
            </div>

            <div class=" mt-3 justify-content-center d-flex">
                <div class="form-group">
                    <input type="radio" name="country" value="us">
                    <img src="us.png" alt="">
                </div>
                <div class="form-group">
                    <input type="radio" name="country" value="uk">
                    <img src="uk.png" alt="">
                </div>
                <div class="form-group">
                    <input type="radio" name="country" value="fr">
                    <img src="fr.png" alt="">
                </div>
            </div>

            <div class=" mt-3 justify-content-center d-flex">

                <div class="form-group">
                    <input type="radio" name="country" value="sg">
                    <img src="sg.png" alt="">
                </div>
                <div class="form-group">
                    <input type="radio" name="country" value="jp">
                    <img src="jp.png" alt="">
                </div>
                <div class="form-group">
                    <input type="radio" name="country" value="cn">
                    <img src="cn.png" alt="">
                </div>
            </div>


                <select class="mt-3 custom-select" name="category">
                    <option value="business">business</option>
                    <option value="entertainment">entertainment</option>
                    <option value="general">general</option>
                    <option value="health">health </option>
                    <option value="science">science</option>
                    <option value="sports">sports</option>
                    <option value="technology">technology</option>
                </select>

            <button class="mt-3" type="submit">Search</button>
        </form>
    </div>
</div>
